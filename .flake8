# setup.cfg
[flake8]
max-line-length = 88
extend-ignore = E722, N802, N803, N806, N812, E203, W503, E402, E741, W191, E101
per-file-ignores =
    __init__.py: F401,F403,F405
    tests/*: S101,E501
    src/**/*.py: ANN101
select = C,E,F,W,B,B950
exclude =
    .git,
    __pycache__,
    *.pyc,
    .venv,
    env/,
    build/,
    dist/
